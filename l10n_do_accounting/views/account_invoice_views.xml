<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_inherit" model="ir.ui.view">
        <field name="name">l10n.do.accounting.invoice.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='id']" position="after">
                <!-- Invisible fields -->
                <field name="fiscal_sequence_status" invisible="1"/>
                <field name="is_debit_note" invisible="1"/>
                <field name="is_l10n_do_fiscal_invoice" invisible="1"/>
                <field name="fiscal_sequence_id" invisible="1"/>
                <field name="assigned_sequence" invisible="1"/>
                <field name="available_fiscal_type_ids" invisible="1"/>
            </xpath>

            <xpath expr="//form/sheet/div/span" position="after">
                <span class="o_form_label"
                      invisible="state == 'draft' or is_debit_note == False">Debit Note</span>
            </xpath>

            <xpath expr="//form/header" position="after">
                <div groups="account.group_account_invoice" class="alert alert-warning" role="alert" style="margin-bottom:0px;"
                     invisible="fiscal_sequence_status in ['no_fiscal', 'fiscal_ok', 'no_sequence'] or state not in ['draft', 'open']">
                    Fiscal Sequence almost depleted.
                </div>

                <!--TODO: Fiscal Sequence depleted do not working correct, The message does not appear when creating a new invoice-->
                <div groups="account.group_account_invoice" class="alert alert-danger" role="alert" style="margin-bottom:0px;"
                     invisible="fiscal_sequence_status in ['no_fiscal', 'fiscal_ok', 'almost_no_sequence'] or state not in ['draft', 'open']">
                    Fiscal Sequence depleted.
                </div>
            </xpath>

            <xpath expr="//button[@name='action_reverse']" position="attributes">
                <attribute name="groups">l10n_do_accounting.credit_note_group</attribute>
            </xpath>

                <!--Cambios V 16.0.2.0.9 -->
            <xpath expr="//form/sheet/group/group[@id='header_left_group']/label[@for='ref']" position="attributes">
                <attribute name="invisible">is_l10n_do_fiscal_invoice == True or move_type not in ['in_invoice', 'in_receipt', 'in_refund']</attribute>
            </xpath>

            <xpath expr="//form/sheet/group/group[@id='header_left_group']/field[@name='ref']" position="attributes">
                <attribute name="invisible">is_l10n_do_fiscal_invoice == True or move_type not in ['in_invoice', 'in_receipt', 'in_refund']</attribute>
            </xpath>

            <xpath expr="//form/sheet/notebook/page[@id='other_tab']/group[@id='other_tab_group']/group[@name='sale_info_group']/label[@for='ref']" position="attributes">
                <attribute name="invisible">is_l10n_do_fiscal_invoice == True</attribute>
            </xpath>

            <xpath expr="//form/sheet/notebook/page[@id='other_tab']/group[@id='other_tab_group']/group[@name='sale_info_group']/field[@name='ref']" position="attributes">
                <attribute name="invisible">is_l10n_do_fiscal_invoice == True</attribute>
            </xpath>


            <xpath expr="//field[@name='partner_id']" position="after">

                <field name="fiscal_type_id" domain="[('id', 'in', available_fiscal_type_ids)]"
                       invisible="move_type not in ['in_invoice', 'out_invoice', 'in_refund', 'out_refund'] or not is_l10n_do_fiscal_invoice"
                       required="is_l10n_do_fiscal_invoice"
                       readonly="state != 'draft'"/>

                <field name="income_type"
                       invisible="move_type not in ['out_invoice', 'out_refund'] or not is_l10n_do_fiscal_invoice"
                       required="is_l10n_do_fiscal_invoice and move_type in ['out_invoice', 'out_refund']"
                       readonly="state != 'draft'"/>

                <field name="expense_type"
                       invisible="move_type not in ['in_invoice', 'in_refund'] or not is_l10n_do_fiscal_invoice"
                       required="is_l10n_do_fiscal_invoice and move_type in ['in_invoice', 'in_refund']"
                       readonly="state != 'draft'"/>

                <field name="ref" string="NCF" readonly="1"
                       invisible="not ref or not assigned_sequence"/>


                <field name="ref" string="NCF"
                       invisible="assigned_sequence or not fiscal_type_id"
                       required="is_l10n_do_fiscal_invoice and not assigned_sequence"
                       readonly="state != 'draft'"/>

                <field name="origin_out"
                       invisible="move_type not in ['out_refund', 'in_refund'] or not is_debit_note"
                       required="(move_type in ['out_refund', 'in_refund'] and is_l10n_do_fiscal_invoice) or is_debit_note"
                       readonly="state != 'draft'"/>

                <field name="ncf_expiration_date" readonly="1"
                       invisible="not ncf_expiration_date or not assigned_sequence"/>

                <field name="ncf_expiration_date"
                       invisible="assigned_sequence or not fiscal_type_id"
                       readonly="state != 'draft'"/>

            </xpath>

        </field>
    </record>

    <record id="inherit_invoice_tree" model="ir.ui.view">
        <field name="name">inherit.invoice.tree</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='ref']" position="attributes">
                <attribute name="string">NCF</attribute>
                <attribute name="optional">show</attribute>
            </xpath>

       </field>
    </record>

    <record id="action_invoice_out_debit_note" model="ir.actions.act_window">
        <field name="name">Debit Notes</field>
        <field name="res_model">account.move</field>

        <field name="view_mode">tree,kanban,form,calendar,pivot,graph,activity</field>
        <field name="view_ids"
               eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('account.view_out_invoice_tree')}),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('account.view_move_form')})]"/>

        <field name="domain">[('move_type','=','out_invoice'), ('is_debit_note', '=', True)]</field>
        <field name="context">{'default_type': 'out_invoice', 'move_type': 'out_invoice', 'journal_type': 'sale', 'default_is_debit_note': True}</field>
        <field name="search_view_id" ref="account.view_account_invoice_filter"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a debit note
            </p><p>
            Note that the easiest way to create a debit note is to do it directly
            from the customer invoice.
        </p>

        </field>
    </record>


    <record id="l10n_do_accounting_invoice_form_cancel_inherit" model="ir.ui.view">
            <field name="name">invoice.form.cancel.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <!-- <xpath expr="//button[@name='button_cancel']" position="replace">
                    <button name="action_invoice_cancel" type="object" states="draft" string="Cancel" groups="account.group_account_invoice" data-hotkey="c"/>
                </xpath> -->

                <xpath expr="//h1" position="after">
                    <h4 invisible="state != 'cancel' or not is_l10n_do_fiscal_invoice">
                        Cancellation Reason:
                        <br/>
                        <field name="annulation_type" readonly="1"/>
                    </h4>
                </xpath>

            </field>
    </record>

    <!-- <menuitem action="action_invoice_out_debit_note"
              id="menu_action_invoice_out_debit_note"
              parent="account.menu_finance_receivables"
              sequence="2"/> -->


    <record id="action_vendor_in_debit_note" model="ir.actions.act_window">
        <field name="name">Vendor Debit Notes</field>
        <field name="res_model">account.move</field>

        <field name="view_mode">tree,kanban,form,calendar,pivot,graph,activity</field>
        <field eval="False" name="view_id"/>
        <field name="domain">[('move_type','=','in_invoice'), ('is_debit_note', '=', True)]</field>
        <field name="context">{'default_type': 'in_invoice', 'move_type': 'in_invoice', 'journal_type': 'purchase', 'default_is_debit_note': True}</field>
        <field name="search_view_id" ref="account.view_account_invoice_filter"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Record a new vendor debit note
            </p>
        </field>
    </record>

    <!-- <menuitem action="action_vendor_in_debit_note"
              id="menu_action_invoice_in_debit_note"
              parent="account.menu_finance_payables"
              sequence="10"/> -->


</odoo>
