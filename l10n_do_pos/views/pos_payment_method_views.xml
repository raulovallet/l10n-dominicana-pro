<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_payment_method_view_form" model="ir.ui.view">
        <field name="name">pos.payment.method.view.form</field>
        <field name="model">pos.payment.method</field>
        <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='split_transactions']" position="after">
                <field name="is_credit_note" invisible="journal_id != False and split_transactions == False"/>
            </xpath>

            <xpath expr="//field[@name='journal_id']" position="attributes">
                <attribute name="invisible">is_credit_note == True</attribute>
            </xpath>

        </field>
    </record>
</odoo>
